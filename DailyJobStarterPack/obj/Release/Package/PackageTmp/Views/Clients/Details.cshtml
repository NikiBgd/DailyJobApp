<style>
    .counter {
        display: table-cell;
        margin: 1.5%;
        font-size: 25px;
        background-color: #FF6F6F;
        width: 150px;
        border-radius: 50%;
        height: 150px;
        vertical-align: middle;
        color: #fff;
    }
</style>
<script>
    $(document).ready(function () {
        $('.counter').each(function () {
            var $this = $(this),
                countTo = $this.attr('data-count');

            $({ countNum: $this.text() }).animate({
                countNum: countTo
            },

                {

                    duration: 1500,
                    easing: 'linear',
                    step: function () {
                        $this.html(Math.floor(this.countNum) + "<br>" + "Zaposlenih");
                    },
                    complete: function () {
                        $this.html(this.countNum + "<br>" + "Zaposlenih");
                    }

                });



        });
    });
    $(document).ready(function () {
        doGet('changesList', '@Url.Action("GetLastChanges", "Clients", new { clientId = Model.CustomerID})');
        doGet('reportsList', '@Url.Action("GetReports", "Clients", new { clientId = Model.CustomerID})');

        function doGet(partId, urlPath) {
            $.ajax({
                type: "get",
                cache: false,
                url: urlPath,
                success: function (data) {
                    $("#" + partId).html(data);
                },
                error: function (data) {

                }
            });
        }
    });
</script>
